<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <import type="com.bigtime.data.api.Status" />

        <import type="com.bigtime.data.api.Resource" />

        <variable
            name="resultCount"
            type="int" />

        <variable
            name="image"
            type="String" />

        <variable
            name="searchResource"
            type="Resource" />

        <variable
            name="callback"
            type="com.bigtime.ui.RetryCallback" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="?android:colorBackground"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/l_welcome"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_welcome"
            android:padding="@dimen/main_padding"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/edittext_hieght"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_welcome"
                android:layout_width="wrap_content"
                android:text="Welcome"
                android:textColor="@color/white"
                android:fontFamily="@font/bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="Welcome"
                android:textColor="@color/white"
                android:fontFamily="@font/normal"
                android:layout_below="@+id/txt_welcome"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_gift"
            android:layout_marginRight="@dimen/edittext_hieght"
            app:layout_constraintRight_toRightOf="@+id/l_welcome"
            app:layout_constraintBottom_toTopOf="@+id/l_welcome"
            app:layout_constraintTop_toTopOf="@+id/l_welcome"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_add_product"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/l_welcome"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.47"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/normal_padding"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="75dp"
                    android:background="@drawable/round_gray"
                    android:padding="@dimen/normal_padding"
                    android:src="@drawable/ic_add_product_large"
                    android:layout_height="75dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Add Product"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_order"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/l_welcome"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.47"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/normal_padding"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="75dp"
                    android:background="@drawable/round_gray"
                    android:padding="@dimen/normal_padding"
                    android:src="@drawable/ic_order_summery_large"
                    android:layout_height="75dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="My Order"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/l_cancellation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@+id/l_order"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:padding="@dimen/normal_padding"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    android:layout_marginLeft="@dimen/main_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/primaryText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Sales Analysis"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_sale_amount"
                    android:layout_width="wrap_content"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/bold"
                    android:paddingRight="@dimen/main_padding"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="$1,20,006"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_order_count"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_sale_amount"
                    android:fontFamily="@font/normal"
                    android:layout_marginRight="@dimen/main_padding"
                    android:textColor="@color/primaryText"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="( 25 Order )"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/segment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_order_count"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:checkedButton="@+id/rb_month"
                    android:background="@drawable/border_accent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/main_padding">
                    <RadioButton
                        android:id="@+id/rb_week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Last Week" />

                    <RadioButton
                        android:id="@+id/rb_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Last Month" />

                    <RadioButton
                        android:id="@+id/rb_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Last Year" />
                </RadioGroup>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>






        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_order"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            tools:listitem="@layout/item_user"
            android:id="@+id/list_user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/empty_search_result}"
            android:id="@+id/no_results_text"
            app:visibleGone="@{searchResource.status == Status.SUCCESS &amp;&amp; resultCount == 0}"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="247dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <include
            layout="@layout/loading_state"
            app:resource="@{searchResource}"
            app:callback="@{() -> callback.retry()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>